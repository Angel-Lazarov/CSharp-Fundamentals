@using MySchoolWebApplication.ViewModels.StudentViewModel
@model List<StudentViewModel>

<style>
	table, th, td {
		border: 2px solid black;
		border-collapse: collapse;
	}
</style>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
	<h3>Списък на студенти</h3>
	<p>Записани Студенти</p>

</div>

<table style="background-color:aquamarine">
	<tr>
		<th class="text-center">Id</th>
		<th class="text-center">Име</th>
		<th class="text-center">Години</th>
		<th class="text-center">Курс</th>
	</tr>

	@foreach (StudentViewModel student in Model)
	{
		<tr>
			<td class="text-center">@student.Id</td>
			<td>@student.Name</td>
			<td>@student.Age</td>
			<td>@student.CourseName</td>
		</tr>
	}
</table>

